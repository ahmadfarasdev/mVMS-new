<table class="table  table-responsive" id="users_table">
  <thead>
  <tr>
    <th><%= t :login %></th>
    <th><%= t :email %></th>
    <th> Last seen at </th>
    <th> Sign in count </th>
    <th> Last Sign in at</th>
    <th> Last Sign in IP</th>
    <th> Failed Attempts</th>
    <th> Locked at </th>
    <th> Password changed At </th>
  </tr>
  </thead>


  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= format_date_time user.last_activity_at %></td>
        <td><%= user.sign_in_count %></td>
        <td><%= format_date_time user.last_sign_in_at %></td>
        <td><%=  user.last_sign_in_ip %></td>
        <td><%=  user.failed_attempts %></td>
        <td><%=  format_date_time user.locked_at %></td>
        <td><%=  format_date_time user.password_changed_at %></td>

      </tr>
  <% end %>
  </tbody>
</table>

<script>
  $(document).ready(function(){
    initDataTable('users_table')
  })
</script>
