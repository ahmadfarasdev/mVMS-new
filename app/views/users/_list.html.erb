<table style="width: 100%" class="table  table-responsive display responsive nowrap" id="users_table">
  <thead>
  <tr>
    <th>#</th>
    <th><%= t :email %></th>
    <th><%= t :actions %></th>


  </tr>
  </thead>

  <tbody>
  <% User.where.not(id: current_user.id).each do |user| %>
    <tr>
      <td><%= link_to user.id, user %></td>
      <td><%= user.email %></td>
      <td><%= link_to "Delete",user_path(user),method: "delete",confirm: "Are you sure?",class: "btn btn-warning" %></td>
    </tr>
  <% end %>

  </tbody>
</table>

