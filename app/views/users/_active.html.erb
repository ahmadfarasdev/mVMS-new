<table class="table  table-responsive" id="users_table">
  <thead>
  <tr>
    <th><%= t :login %></th>
    <th><%= t :email %></th>
    <th> <%= t('profile.first_name') %> </th>

    <th> <%= t('profile.middle_name') %> </th>
    <th> <%= t('profile.last_name') %> </th>
    <th> <%= t('role') %> </th>

    <th> <%= t('status') %> </th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.first_name %></td>

    <td><%= user.middle_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.role.to_s %></td>

    <td><%= user.active? %></td>
    <td><%= link_to 'Sign out', active_users_path(user_id: user.id), method: 'post' %></td>
  </tr>
  <% end %>
  </tbody>
</table>

<script>
  $(document).ready(function(){
    initDataTable('users_table')
  })
</script>
